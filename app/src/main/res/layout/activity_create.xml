<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:id="@+id/createFirelinkLayout">

    <EditText
        android:id="@+id/myLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#E0F2F1"
        android:textColorLink="#E0F2F1"
        android:textIsSelectable="false"
        android:textSize="22dp"
        android:typeface="normal"
        android:layout_alignParentStart="false"
        android:background="@drawable/background_border_white"
        android:padding="8dp"
        android:layout_marginLeft="90dp"
        android:hint="My link"
        android:textColorHint="#b6e0f2f1"
        android:minWidth="200dp"
        android:maxLength="350" />

    <ImageButton android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_content_paste_white_24dp"
        android:background="@null"
        android:layout_toRightOf="@+id/myLink"
        android:layout_marginLeft="10dp"
        android:id="@+id/pasteBtn" />
    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="FIRELINK!"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="1500"
        app:sub_btn_line_color="#4c95ba"
        app:sub_btn_ripple_color="#4c95ba"
        app:sub_btn_tick_color="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>